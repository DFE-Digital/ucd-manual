{% extends "includes/layout.njk" %}

{% block body %}
  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full app-component-reading-width">

      <div class="nhsuk-grid-row">

        <div class="nhsuk-grid-column-two-thirds">

          <h1 class="app-page-heading">

            <span class="nhsuk-caption-l">
              {%- if subSection %}
                {%- if theme %}
                  {{theme}}
                {% else %}
                  {{subSection}}
                {% endif %}
              {% else %}
                {{pageSection}}
              {% endif %}
              <span class="nhsuk-u-visually-hidden"> - </span>
            </span>

            {{pageTitle}}
          </h1>

          {%- if hideDescription %}
          {% else %}
            <p class="nhsuk-lede-text app-lede-text">{{pageDescription}}</p>
          {% endif %}

          {% block bodyContent %}{% endblock %}

          {% block afterContact %}{% endblock %}

          {%- if dateUpdated %}
            <p class="nhsuk-body-s nhsuk-u-secondary-text-color nhsuk-u-margin-top-5 nhsuk-u-margin-bottom-0">Updated: {{dateUpdated}}</p>
          {% endif %}

        </div>

        <div class="nhsuk-grid-column-one-third"></div>

      </div>

    </div>
  </div>
{% endblock %}