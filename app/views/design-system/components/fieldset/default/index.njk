{% from 'fieldset/macro.njk' import fieldset %}
{% from "input/macro.njk" import input %}

{% call fieldset({
  legend: {
    "text": "What is your address?",
    "classes": "dfeuk-fieldset__legend--l",
    "isPageHeading": true
  }
}) %}

  {{ input({
    label: {
      "html": 'Building and street <span class="dfeuk-u-visually-hidden">line 1 of 2</span>'
    },
    "id": "address-line-1",
    "name": "address-line-1"
  }) }}

  {{ input({
    label: {
      "html": '<span class="dfeuk-u-visually-hidden">Building and street line 2 of 2</span>'
    },
    "id": "address-line-2",
    "name": "address-line-2"
  }) }}

  {{ input({
    label: {
      "text": "Town or city"
    },
    "classes": "dfeuk-u-width-two-thirds",
    "id": "address-town",
    "name": "address-town"
  }) }}

  {{ input({
    label: {
      "text": "County"
    },
    "classes": "dfeuk-u-width-two-thirds",
    "id": "address-county",
    "name": "address-county"
  }) }}

  {{ input({
    label: {
      "text": "Postcode"
    },
    "classes": "dfeuk-input--width-10",
    "id": "address-postcode",
    "name": "address-postcode"
  }) }}

{% endcall %}
